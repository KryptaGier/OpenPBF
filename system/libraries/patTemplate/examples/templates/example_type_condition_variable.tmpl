<patTemplate:tmpl name="cond" type="condition" conditionvar="foo">

	<patTemplate:sub condition="__default">
	<div>{FOO}</div>
	</patTemplate:sub>

	<patTemplate:sub condition="{BAR}">
    <div style="font-weight:bold; background-color: #cc0000;">{FOO}</div>
	</patTemplate:sub>

	<patTemplate:sub condition="test">
    <div style="font-weight:bold; background-color: #cc00cc;">{FOO}</div>
	</patTemplate:sub>
	
</patTemplate:tmpl>